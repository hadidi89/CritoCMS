@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OurServices)Model.Content;
}


<div class="service-box">
    <div class="line"></div>
    <h4>@content.Value("ourServiceTitle")</h4>
    <p>@content.Value("ourServiceDescription")</p>
    <div class="service-box-links">
        <a class="btn-circle" href="Value("ourServiceButtonUrl")"><i class="@content.Value("ourServiceButtonText")"></i></a>
    </div>
</div>

